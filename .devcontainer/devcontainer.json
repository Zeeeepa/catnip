{
  "name": "Catnip Dev Container",
  "image": "mcr.microsoft.com/devcontainers/go:1-bookworm",
  "remoteEnv": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go"
      }
    }
  },
  "forwardPorts": [5173, 6369],
  "onCreateCommand": "bash .devcontainer/post-create.sh",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=${localWorkspaceFolderBasename}-catnip-volume,target=/home/vscode/.catnip/volume,type=volume",
    "source=${localWorkspaceFolderBasename}-go-mods,target=/go/pkg/mod,type=volume,uid=1000,gid=1000"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "./features/catnip": {}
  }
}
